<%= render "components/alert"%>
<%# Jumbotron %>

<section class="bg-primary pb-4 text-center">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-lg-12 text-center">
        <h1 class="display-4 text-white mt-5 mb-2">Welcome to EventBrite !</h1>
          <p class="lead">
            <%# <%= link_to "Create an Event !", new_event_path, class: "btn btn-dark btn-lg mt-5" %> %>
          </p>
      </div>
    </div>
  </div>
</section>

<%# Main %>

<main class="album bg-light py-5">
  <div class="container">
      <div class="row">
      <% @events.each do |event|%>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= event.created_at.strftime("%Y-%m-%d at %H:%M") %></h6>
              <p class="card-text"><%= event.description %></p>
               <%# <%= link_to 'See event', event_path(event.id), class: 'card-link' %> 
               <%# <%= link_to event.administrator.first_name, user_path(event.administrator.id), class: 'card-link' %> %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
  </div>
</main>