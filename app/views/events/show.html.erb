      </div>

    </div>
    <!-- /.col-lg-8-->

      <!-- Sidebar Widgets Column -->

    <div class="col-md-4">

      <!-- Administration / Event regitration Widget -->

      <div class="card my-4">
        <h5 class="card-header"><%= current_user_is_administrator?(@event) ? 'Administration' : 'Take Part !' %></h5>
        <div class="card-body">
          <%= render partial: 'events/shared/participation_link', locals: {event: @event} %>
        </div>
      </div>

      <!-- Event Detail Widget -->

      <div class="card my-4">
        <h5 class="card-header">Event Details</h5>
        <div class="card-body">
          <ul>
            <li>NÂ° of participants: <%= @event.participants.count %></li>
            <li>Administrator: <%= @event.administrator.username %></li>
            <li>Starting: <%= @event.starting_date_time %></li>
            <li>Ending: <%= @event.ending_date_date_time %></li>
            <li>Location: <%= @event.location %></li>
            <li>Price: <%= pretty_amount(@amount) %></li>
          </ul>
        </div>
      </div>

    </div>
