<div class="container">

  <h3>Add or change your profile picture</h3>.
  <div class="form-group">

    <%= current_user_avatar %>

    <%= form_tag user_avatar_path(current_user.id), multipart: true do %>
      <%= label_tag :avatar %>
      <%= file_field_tag :avatar, class:"form-control" %>
      <%= submit_tag "Upload", class:"btn btn-primary" %>
    <% end %>
    
    <%= link_to 'Delete avatar', user_avatar_path(current_user.id), method: :delete, class: "btn btn-danger" %>
  </div>

  <h3>Edit your personnal infos:</h3>

  <%= form_for @user, :html => { novalidate: true, class: "needs-validation" } do |f| %>

    <div class="form-group">
      <%= f.label 'first_name' %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'last_name' %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'description' %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    
    <%= submit_tag "Edit infos", class:"btn btn-primary" %>

  <% end %>
</div>