<div class="container">

  <h3>Add or change your profile picture</h3>.
  <div class="form-group">
    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, alt: 'avatar', style: "width:200px; display: block" %>
    <% else%>
      <p>No profile picture</p>
    <% end %>

    <%= form_tag user_avatars_path(current_user), multipart: true do %>
      <%= label_tag :avatar %>
      <%= file_field_tag :avatar, class:"form-control" %>
      <%= submit_tag "upload", class:"btn btn-primary" %>
    <% end %>
  </div>

  <h3>Edit your personnal infos:</h3>

  <%= form_for @user, :html => { novalidate: true, class: "needs-validation" } do |f| %>

    <div class="form-group">
      <%= f.label 'first_name' %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'last_name' %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'description' %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    
    <%= submit_tag "Edit infos", class:"btn btn-primary" %>

  <% end %>
</div>