<div class="container">

  <%= form_for @user, :html => { novalidate: true, class: "needs-validation" } do |f| %>

    <div class="form-group">
      <%= f.label 'first_name' %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'last_name' %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'description' %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    
    <%= submit_tag "Edit infos", class:"btn btn-primary" %>

  <% end %>
</div>